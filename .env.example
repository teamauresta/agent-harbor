# Harbor — Environment Variables
# Copy to .env and fill in your values

# Harbor
HARBOR_SECRET=change-me-in-production
PORT=8000

# Chatwoot (your self-hosted instance)
CHATWOOT_BASE_URL=https://chatwoot.sotastack.com.au
CHATWOOT_USER_ACCESS_TOKEN=your-super-admin-token

# LLM — defaults to local Qwen3-32B (OpenAI-compatible)
# Prefixed HARBOR_LLM_* to avoid conflict with real OPENAI_API_KEY in secrets manager
HARBOR_LLM_API_KEY=sk-local
HARBOR_LLM_BASE_URL=http://192.168.0.99:8011/v1
HARBOR_LLM_MODEL=qwen3-32b

# Fallback — GPT-4o for Pro/Agency tier clients (optional)
HARBOR_LLM_FALLBACK_API_KEY=
HARBOR_LLM_FALLBACK_MODEL=gpt-4o

# Database
DATABASE_URL=postgresql+asyncpg://harbor:harbor@localhost:5432/harbor

# Redis
REDIS_URL=redis://localhost:6379/5

# Sentry (optional)
SENTRY_DSN=
